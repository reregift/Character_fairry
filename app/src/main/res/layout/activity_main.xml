<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    tools:context="com.example.asus.character_fairry.MainActivity">


    <Button
        android:id="@+id/start_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="250dp"
        android:background="#663399"
        android:backgroundTintMode="screen"
        android:fontFamily="casual"
        android:text="START"
        android:textColor="@android:color/background_light"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:textColor="#ffffff"

            />

    <Button
        android:id="@+id/random_button"
        android:layout_width="330dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:background="@android:color/holo_red_dark"
        android:backgroundTintMode="screen"
        android:elevation="0dp"
        android:fontFamily="casual"
        android:text="คุณเป็นเจ้าหญิงคนไหนกันเอ่ย? กดเลย!!"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="คุณเป็นเจ้าหญิงคนไหนกันเอ่ย? กดเลย!!"
        tools:textColor="@android:color/background_light" />


</RelativeLayout>
